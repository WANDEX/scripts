#!/bin/sh
# rate script to get sorted by column N items length output

CSCRDIR="${CSCRDIR:-"$HOME/.cache/cscripts"}"
RATE_FORM="${CSCRDIR}/rate/rate_form"

bname="$(basename "$0")"
USAGE=$(printf "%s" "\
Usage: $bname [OPTION...]
OPTIONS
    -a, --ascending     Sort list in a ascending manner
    -c, --colnum        Sort by: 1-name 2-price 3-c24h 4-c01h 5-mcap 6-rank
    -d, --descending    Sort list in a descending manner
    -h, --help          Display help
    -n, --number        Number of coins in list
    --bot               Get tail -n N before applying sort
    --top               Get head -n N before applying sort
EXAMPLE
    # make sort in range of ranks 11-20 (get 10 coins total)
    $bname -a -c6 -n20 --top 20 --bot 10
")

get_opt() {
    # Parse and read OPTIONS command-line options
    SHORT=ac:dhn:
    LONG=ascending,bot:,colnum:,descending,help,number:,top:
    OPTIONS=$(getopt --options $SHORT --long $LONG --name "$0" -- "$@")
    # PLACE FOR OPTION DEFAULTS
    num=10
    eval set -- "$OPTIONS"
    while true; do
        case "$1" in
        -a|--ascending)
            ascending=1
            ;;
        -c|--colnum)
            shift
            case $1 in
                0*)
                    printf "%s\n%s\n" "$1" "^ unsupported number! exit."
                    exit 1
                    ;;
                ''|*[!0-9]*)
                    printf "%s\n%s\n" "$1" "^ IS NOT A NUMBER OF INT! exit."
                    exit 1
                    ;;
                *) colnum=$1 ;;
            esac
            ;;
        -d|--descending)
            descending=1
            ;;
        -h|--help)
            echo "$USAGE"
            exit 0
            ;;
        -n|--number)
            shift
            case $1 in
                0*)
                    printf "%s\n%s\n" "$1" "^ unsupported number! exit."
                    exit 1
                    ;;
                ''|*[!0-9]*)
                    printf "%s\n%s\n" "$1" "^ IS NOT A NUMBER OF INT! exit."
                    exit 1
                    ;;
                *) num=$1 ;;
            esac
            if [ -f "$RATE_FORM" ]; then
                # shellcheck disable=SC2002 # this is not useles cat!
                num_total=$(cat "$RATE_FORM" | wc -l)
                [ "$num" -gt "$num_total" ] && num=$num_total
            fi
            ;;
        --bot)
            shift
            bot=$1
            ;;
        --top)
            shift
            top=$1
            ;;
        --)
            shift
            break
            ;;
        esac
        shift
    done
}

get_opt "$@"

[ ! -f "$RATE_FORM" ] && exit 1 # silently exit if file does not exist

sort_cmd() {
    tmpd="${TMPDIR:-/tmp/}${bname}" && mkdir -p "$tmpd"
    tmpf=$(mktemp "$tmpd/XXXX")
    # check if variables defined
    if [ "$top" ] && [ "$bot" ]; then
        head -n "$top" "$RATE_FORM" | tail -n "$bot" > "$tmpf"
    elif [ "$top" ]; then
        head -n "$top" "$RATE_FORM" > "$tmpf"
    elif [ "$bot" ]; then
        tail -n "$bot" "$RATE_FORM" > "$tmpf"
    else
        cat "$RATE_FORM" > "$tmpf"
    fi
    case "$colnum" in
        1) sort "-k1${sr}" "$tmpf";;
        2) sort "-k2n${sr}" "$tmpf";;
        3) sort "-k3bg${sr}" "-k4bg${sr}" "$tmpf";;
        4) sort "-k4bg${sr}" "-k3bg${sr}" "$tmpf";;
        5) sort "-k6n${sr}" "$tmpf";;
        6) sort "-k6n${sr}" "$tmpf";;
        *) echo "there is no such column with number:$colnum exit." && exit 1;;
    esac
    rm -f "$tmpf" # delete the temporary file, as it's no longer needed
}

ascend() {
    sr=""
    data="$(sort_cmd)"
    echo "$data"
}

descend() {
    sr="r"
    data="$(sort_cmd)"
    echo "$data"
}

sort_list() {
    if [ -z "$colnum" ]; then
        echo "the column number is required for sorting by ... exit."
        exit 1
    fi
    # check if variables defined
    if [ "$ascending" ]; then
        ascend
    elif [ "$descending" ]; then
        descend
    else
        # descending order by default
        descend
    fi
}

main() {
    DATA="$(sort_list)"
    echo "$DATA" | head -n "$num"
}

main "$@"
